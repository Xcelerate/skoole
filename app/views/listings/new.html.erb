
<% for listing in @listings do %>
	<%= form_for listing do |f| %>
		<%= f.fields_for Book.new do |builder| %>
			<%= builder.label :isbn %>
			<%= builder.text_field :isbn %>
		<% end %>
		<%= f.label :price %>
		<%= f.text_field :price %>
		<%= f.label :condition %>
		<%= f.text_field :condition%>
		<%= f.hidden_field :kind, :value => "sell" %>
	<%= f.submit 'Submit' %>
	<% end %>
<% end %>

